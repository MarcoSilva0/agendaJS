<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        
        <div class="col-8 my-4">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie, edite e apague seus contatos</p>

            <%- include('includes/messages');  %>

            <form action="/contato/register" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3 form-group">
                    <label for="usuario-nome" class="col-sm-2 col-form-label">Nome</label>
                    <input type="text" name="nome" class="form-control" id="usuario-nome" placeholder="Digite o nome" required value="<%= contato.nome %>" >
                </div>
                <div class="mb-3 form-group">
                    <label for="usuario-sobrenome" class="col-sm-2 col-form-label">Sobrenome</label>
                    <input type="text" name="sobrenome" class="form-control" id="usuario-sobrenome" placeholder="Digite o sobrenome"  value="<%= contato.sobrenome %>" >
                </div>
                <div class="mb-3 form-group">
                    <label for="usuario-email" class="col-sm-2 col-form-label">E-mail</label>
                    <input type="text" name="email" class="form-control" id="usuario-email" placeholder="Digite o email"  value="<%= contato.email %>" >
                </div>
                <div class="mb-3 form-group">
                    <label for="usuario-telefone" class="col-sm-2 col-form-label">Telefone</label>
                    <input type="text" name="telefone" class="form-control" id="usuario-telefone" placeholder="Digite o telefone"  value="<%= contato.telefone %>" >
                </div>

                <div class="mb-3 form-group">
                  <input type="submit" value="Salvar" class="btn btn-primary">
                </div>
            </form>
            
        </div>
        
        <div class="col-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>